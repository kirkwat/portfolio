---
import "@fontsource-variable/inter";
import Splash from "~/components/landing/splash.astro";
import Head from "~/components/global/head.astro";
import Header from "~/components/landing/header.astro";
import Footer from "~/components/global/footer.astro";
import Certifications from "~/components/landing/certs.astro";
import Projects from "~/components/landing/projects.astro";
import "~/styles/index.css";
---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <Head />
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />
    <Splash />
    <div class="space-y-24 px-8 pt-24 md:py-32">
      <Projects />
      <Certifications />
    </div>
    <Footer />
  </body>
</html>
