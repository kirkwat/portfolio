---
import Starfield from "~/components/landing/starfield.astro";
---

<section id="splash" class="relative h-full bg-black">
  <Starfield />
  <div class="relative flex h-full items-center justify-center">
    <h2
      id="splash-title"
      class="flex flex-col gap-2 self-auto justify-self-end text-center sm:gap-4"
      style={{ transform: "translateZ(0)" }}
    >
      <div
        class="gradient-text-title text-center font-bold tracking-tighter text-8xl"
      >
        Kirk
        <br /> Watson
      </div>
      <div class="font-bold tracking-tight text-secondary text-xl">
        Full-time<br /> Snake Charmer
      </div>
    </h2>
  </div>
</section>

<script>
  import { PowerGlitch } from "powerglitch";

  PowerGlitch.glitch(".glitch", {
    playMode: "always",
    createContainers: true,
    hideOverflow: false,
    timing: {
      duration: 3000,
    },
    glitchTimeSpan: {
      start: 0.5,
      end: 0.7,
    },
    shake: {
      velocity: 15,
      amplitudeX: 0.2,
      amplitudeY: 0.2,
    },
    slice: {
      count: 10,
      velocity: 15,
      minHeight: 0.02,
      maxHeight: 0.15,
      hueRotate: true,
    },
    pulse: false,
  });
</script>
