---
import ThemeSwitcher from "~/components/shared/theme-switcher.astro";
import ProjectProgressTracker from "../project/project-progress-tracker.astro";

interface Props {
  projectHeader?: boolean;
}

const { projectHeader = false } = Astro.props;
---

<header
  class="fixed top-0 z-20 w-full border-b border-default bg-offset py-3 text-default"
>
  <div class="mx-auto flex max-w-4xl items-center justify-between px-8">
    <a
      id="site-title"
      class="gradient-text flex transform items-center gap-2 font-extrabold tracking-tight transition-all duration-500 text-lg hover:text-secondary hover:opacity-80"
      href="/"
    >
      <h1 class="sr-only">Kirk Watson</h1>
      <h1>Kirk Watson</h1>
    </a>
    <div class="flex items-center gap-4">
      {projectHeader && <ProjectProgressTracker />}
      <ThemeSwitcher id="theme-switcher-project" />
    </div>
  </div>
</header>
