---
import type { CollectionEntry } from "astro:content";

interface Props {
  tech: CollectionEntry<"project">["data"]["technologies"][number];
}

const { tech } = Astro.props;
---

<li
  id={tech.name}
  class="cursor-pointer rounded-full border border-default px-2 py-0.5 text-zinc-100 drop-shadow-md transition-all duration-300 text-xs hover:text-offset hover:shadow-md"
  style={{ backgroundColor: tech.color }}
>
  {tech.name}
</li>
